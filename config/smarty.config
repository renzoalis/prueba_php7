<?php
require_once(SMARTY_DIR.'Smarty.class.php');
class tpl extends Smarty {
   function tpl()
   {
        parent::Smarty();
        $this->template_dir = TPL_PATH.'/templates/';
        $this->compile_dir = TPL_PATH.'/templates_c/';
        $this->config_dir = TPL_PATH.'/configs/';
        $this->cache_dir = TPL_PATH.'/cache/';
        $this->caching = false; //true;
        //$this->assign('app_name','Guest Book');
        
        include_once('../inc/AccesoIntranet.class.php');
		if (class_exists('AccesoIntranet')) {
			$linkMenu = AccesoIntranet::getMenuPrincipal();
			//var_dump($linkMenu2);
			//exit;
			$this->assign('linksMenu',$linkMenu);
		}
   }
   
   function assign($tpl_var, $value = null){
		include_once('../inc/AccesoIntranet.class.php');
		if ((class_exists('AccesoIntranet')) and (($tpl_var == 'links') or (($tpl_var == 'sublinks')))) {
			if (is_array($value)) {
				foreach($value as $link) {
					if (AccesoIntranet::verificarAccesoPagina(str_replace('../','',$link['link']), 'Acceso'))
						$value2[] = $link;
				}
				$value = $value2;
			}				
		}	
		return parent::assign($tpl_var,$value);			
	}
}
?>
